<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewStar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@drawable/baseline_star_rate_24"
        app:layout_constraintBottom_toBottomOf="@+id/textViewRate"
        app:layout_constraintStart_toEndOf="@+id/textViewRate"
        app:layout_constraintTop_toTopOf="@+id/textViewRate"
        app:srcCompat="@drawable/baseline_star_border_24" />

    <ImageView
        android:id="@+id/imageViewStar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@drawable/baseline_star_rate_24"
        app:layout_constraintBottom_toBottomOf="@+id/textViewRate"
        app:layout_constraintStart_toEndOf="@+id/imageViewStar1"
        app:layout_constraintTop_toTopOf="@+id/textViewRate"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/baseline_star_border_24" />

    <ImageView
        android:id="@+id/imageViewStar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@drawable/baseline_star_rate_24"
        app:layout_constraintBottom_toBottomOf="@+id/textViewRate"
        app:layout_constraintStart_toEndOf="@+id/imageViewStar2"
        app:layout_constraintTop_toTopOf="@+id/textViewRate"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/baseline_star_border_24" />

    <ImageView
        android:id="@+id/imageViewStar4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:src="@drawable/baseline_star_rate_24"
        app:layout_constraintBottom_toBottomOf="@+id/textViewRate"
        app:layout_constraintStart_toEndOf="@+id/imageViewStar2"
        app:layout_constraintTop_toTopOf="@+id/textViewRate"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/baseline_star_border_24" />

    <ImageView
        android:id="@+id/imageViewStar5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@drawable/baseline_star_rate_24"
        app:layout_constraintBottom_toBottomOf="@+id/textViewRate"
        app:layout_constraintStart_toEndOf="@+id/imageViewStar4"
        app:layout_constraintTop_toTopOf="@+id/textViewRate"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/baseline_star_border_24" />

    <TextView
        android:id="@+id/textViewMinutesAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="Minutes_Listened"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameAlbum" />

    <TextView
        android:id="@+id/textViewNameAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Name_Album"
        android:textSize="24sp"
        app:flow_horizontalAlign="start"
        app:flow_verticalAlign="top"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="135dp"
        android:layout_height="130dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewLastDateListened"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="LastDateListened"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textViewMinutesAlbum" />

    <TextView
        android:id="@+id/textViewTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="24dp"
        android:text="/10"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLastDateListened"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:text="Rate:"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textViewRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="24dp"
        android:text="x"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewTen"
        app:layout_constraintTop_toBottomOf="@+id/textViewLastDateListened"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>